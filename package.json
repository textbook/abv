{
  "name": "abv",
  "version": "0.1.0",
  "private": true,
  "author": "Jonathan Sharpe <mail@jonrshar.pe>",
  "license": "ISC",
  "dependencies": {
    "@codeyourfuture/eslint-config-standard": "^3.0.0",
    "@testing-library/cypress": "^8.0.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.9.4",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "concurrently": "^6.2.1",
    "cross-env": "^7.0.3",
    "cypress": "^8.3.0",
    "eslint-plugin-cypress": "^2.11.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "sass": "^1.38.0",
    "serve": "^12.0.1",
    "typescript": "^4.3.5",
    "wait-on": "^6.0.0",
    "web-vitals": "^2.1.0"
  },
  "scripts": {
    "build": "react-scripts build",
    "dev": "concurrently -k -s first -n \"app,e2e\" \"npm:start\" \"npm:e2e:open\"",
    "e2e": "concurrently -k -s first -n \"app,e2e\" \"npm:e2e:start\" \"npm:e2e:test\"",
    "e2e:open": "cypress open",
    "e2e:start": "cross-env PORT=3001 npm run serve",
    "pree2e:test": "wait-on -l -t 30000 http-get://localhost:3001",
    "e2e:test": "cross-env CYPRESS_BASE_URL=http://localhost:3001 cypress run",
    "eject": "react-scripts eject",
    "lint": "eslint .",
    "preserve": "cross-env PUBLIC_URL=/ npm run build",
    "serve": "serve build/",
    "ship": "npm run lint && cross-env CI=true npm test && npm run e2e",
    "start": "react-scripts start",
    "test": "react-scripts test"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "@codeyourfuture/standard"
    ],
    "overrides": [
      {
        "extends": [
          "plugin:cypress/recommended"
        ],
        "files": [
          "e2e/**/*.ts"
        ]
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "homepage": "https://blog.jonrshar.pe/abv"
}
